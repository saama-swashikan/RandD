                                        cat uploaded_file.txt | grep ^api_db=
                                    '''
                                    echo $image_name
                                    pull_image(image_name)
                        }
                        withAWS(role:env.ecr_role, roleAccount:env.dest_aws_account, region:env.dest_region) {
